  services.yaml: |
    outgoingServices:
      - name: argocd
        type: argocd
        enabled: true
        config:
          url: http://{{ .Release.Name }}-argocd-server:80
          insecure: true
          credentials:
            type: bearer
            token: xxxx
        annotations:
          description: argocd via agent
          uiUrl: https://{{ .Values.global.argocd.host }}
